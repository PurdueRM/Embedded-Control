{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clear Terminal",
            "type": "shell",
            "command": "clear",
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "clear": true
            },
            "group": "none",
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "Build Robot",
            "type": "shell",
            "command": "make",
            "args": [
                "-j",
                "V=1",
                "ROBOT_PROJECT=${input:robotProject}"
            ],
            "dependsOn": "Clear Terminal",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Rebuild Robot",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "&&",
                "make",
                "-j",
                "V=1",
                "ROBOT_PROJECT=${input:robotProject}"
            ],
            "dependsOn": "Clear Terminal",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "rm -rf build && mkdir build",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "id": "robotProject",
            "type": "pickString",
            "description": "Select the robot project to build",
            "options": [
                "Swerve-Standard",
                "Template"
                // Add your other robot projects here
            ]
        }
    ]
}
